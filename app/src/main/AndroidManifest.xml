<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ap.ky.weather">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sun"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeEmpty">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainKeyActivity"
            android:label="@string/title_activity_main_key" />

        <service
            android:name=".DownloadImageService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".DownloadImageJob"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
        <receiver
            android:name=".WeatherReceiver"
            android:enabled="true"
            android:exported="true">

         </receiver>
    </application>

</manifest>